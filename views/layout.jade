            .header
                ul.nav.nav-pills.pull-right
                    li
                        a.active(href="/") Home
                    if user
                        li
                            a(href='/profile') #{user.username}
                        li
                            a(href='/logout') Logout
                    else
                        li
                            a(href="/login") Login
                        li
                            a(href="/signup") Signup
                h3.text-muted Instagram Clone
            .jumbotron
                block content
